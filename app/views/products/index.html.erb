<% if current_user%>
Logged in as: <%= current_user.name%>
<% end %>
<p><strong>All</strong> - 18 Results</p>
<hr>
<h4 class="mx-auto" style="width:8rem">Best Sellers</h4>
<div class="row">
    <% @products.each do |product|%>
    <div class="column card product-pg-image" style="width: 33.33%;">
        <a href="<%= product_path(product) %>"><img src="<%= product.image %>" height="auto" class="card-img-top" alt="..."></a>
        <div class="card-body">
            <%= link_to product.name, product_path(product) %> <br />
            Description : <%= product.description %> <br />
            Price : <%= product.price %>
        </div>
    </div>
    <% end %>
</div>
</div>
